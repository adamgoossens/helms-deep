apiVersion: hive.openshift.io/v1
kind: ClusterDeployment
metadata:
  name: '{{ cluster_name }}'
  namespace: 'helms-deep-satellite-clusters'
  labels:
    cloud: 'AWS'
    region: 'us-east-1'
    vendor: 'OpenShift'
spec:
  baseDomain: {{ cluster_base_domain }}
  clusterName: '{{ cluster_name }}'
  controlPlaneConfig:
    servingCertificates: {}
  installAttemptsLimit: 2
  installed: false
  platform:
    aws:
      credentialsSecretRef:
        name: acm-aws-creds
      region: us-east-1
  provisioning:
    installConfigSecretRef:
      name: {{ cluster_name }}-install-config
    sshPrivateKeySecretRef:
      name: software-factory-jp1234-ssh-private-key
    imageSetRef:
       #quay.io/openshift-release-dev/ocp-release:4.7.11-x86_64
      name: img4.7.11-x86-64-appsub
  pullSecretRef:
    name: helms-deep-pull-secret
---
apiVersion: cluster.open-cluster-management.io/v1
kind: ManagedCluster
metadata:
  labels:
    cloud: Amazon
    region: us-east-1
    name: '{{ cluster_name }}'
    vendor: OpenShift
    role: 'softwarefactory'
  name: '{{ cluster_name }}'
spec:
  hubAcceptsClient: true
---
apiVersion: hive.openshift.io/v1
kind: MachinePool
metadata:
  name: software-factory-worker
  namespace: 'helms-deep'
spec:
  clusterDeploymentRef:
    name: '{{ cluster_name }}'
  name: worker
  platform:
    aws:
      rootVolume:
        iops: 2000
        size: 100
        type: io1
      type: m5.xlarge
  replicas: 3
---
apiVersion: v1
kind: Secret
metadata:
  name: helms-deep-pull-secret
  namespace: 'helms-deep-satellite-clusters'
stringData:
  .dockerconfigjson: |-
		{{ vault_acm_cluster_pull_secret }}
type: kubernetes.io/dockerconfigjson
---
apiVersion: v1
kind: Secret
metadata:
  name: {{ cluster_name }}-install-config
  namespace: '{{ cluster_name }}'
type: Opaque
data:
  # Base64 encoding of install-config yaml
  install-config.yaml: "{{ lookup('template', 'install-config.yaml.j2') | b64encode }}"
---
apiVersion: v1
kind: Secret
metadata:
  name: core-user-ssh-private-key
  namespace: 'helms-deep-satellite-clusters'
stringData:
  ssh-privatekey: |-
		{{ vault_cluster_core_user_private_key }}
type: Opaque
---
apiVersion: v1
kind: Secret
type: Opaque
metadata:
  name: acm-aws-creds
  namespace: 'helms-deep-satellite-clusters'
stringData:
  aws_access_key_id: {{ aws_access_key_id }}
  aws_secret_access_key: {{ aws_secret_key }}
---
apiVersion: agent.open-cluster-management.io/v1
