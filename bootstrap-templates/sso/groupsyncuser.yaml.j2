---
apiVersion: keycloak.org/v1alpha1
kind: KeycloakUser
metadata:
  name: groupsync
  namespace: helms-deep-sso
  labels:
    app: sso
spec:
  realmSelector:
    matchLabels:
      app: sso
  user:
    credentials:
      - type: password
        value: {{ groupsync_password }}
    clientRoles:
      "realm-management":
        - query-users
        - query-groups
        - view-users
    email: groupsync@helms.deep
    enabled: true
    firstName: Group
    lastName: Sync
    username: groupsync
